{
  "name": "Mouse Odometer",
  "version": "0.6.0",
  "manifest_version": 2,
  "description": "Keep track of the distance your mouse has moved!",
  "homepage_url": "http://www.redundantrobot.com",
  "web_accessible_resources": [
    "public/scripts/odometer.min.js",
    "public/scripts/application.js",
    "public/styles/odometer-theme-default.css",
    "public/styles/styles.css"
  ],
  "applications": {
    "gecko": {
      "id": "travis.lawrence12-mouseodometer@gmail.com",
      "strict_min_version": "54.0"
    }
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["public/scripts/odometer.min.js", "public/scripts/application.js"],
      "css": [
        "public/styles/odometer-theme-default.css",
        "public/styles/styles.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Mouse Odometer!",
    "default_popup": "options.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "permissions": ["activeTab", "storage"]
}
