{
  "name": "Mouse Odometer",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "How far will ya go!?!",
  "homepage_url": "http://www.redundantrobot.com",
  "background": {
    "scripts": ["./js/app.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Mouse Odometer!",
    "default_popup": "options.html"
  },

  "applications": {
    "gecko": {
      "id": "travis.lawrence12@gmail.com",
      "strict_min_version": "54.0"
    }
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "permissions": ["https://*/*", "http://*/*", "tabs"]
}
