{
  "name": "Mouse Odometer",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "How far will ya go!?!",
  "homepage_url": "http://www.redundantrobot.com",
  "web_accessible_resources": ["./js/app.js", "./js/background.js"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./js/app.js", "./js/background.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_title": "Mouse Odometer!",
    "default_popup": "options.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "permissions": ["activeTab"]
}
